#!/usr/bin/python3
import argparse

import os
from pyowm import OWM
import pyowm
from dotenv import load_dotenv
import ipinfo
import sys
import emoji
        #  01d icon="";; 
        #  01n icon="";;
        #  02d icon="";;
        #  02n icon="";;
        #  03d icon="";;
        #  03n icon="";;
        #  04* icon="";;  󰋳
        #  09* icon="";;
        #  10d icon="";;
        #  10n icon="";;
        #  11* icon="";;
        #  13* icon="";;
        #  50* icon="";;
        #
        
icn = {   '01d': "", '01n': "" ,'02n': "",'02d': "", 
            '03d': "", '04d': "", '04n': "",
            '05d': "",
       '09d': "", '10d': "" , '10n': "",
       '11d': "", '12d': ""
}
def get_icon(code):
    try:
        icon = icn[code]
    except:
        icon = ""
    return icon
    
i = ipinfo.getHandler()
details = i.getDetails().details
ip = details['ip']
hostname = details['hostname']
city = details['city']
region = details['region']
country = details['country']
loc= details['loc']
org = details['org']
postal = details['postal']
timezone = details['timezone']
country_name = details['country_name']
lat = details['latitude']
lng = details['longitude']
#  print(city, region, country)
load_dotenv(dotenv_path=f"{os.getenv('HOME')}/.weather")
key=os.getenv('OPW_KEY')
#  print(key)
owm = OWM(key)
#  mgr = owm.w
#  obs = mgr.weather_at_place("Boulder,US")
#  wm = owm.weather_manager()
wm = owm.weather_manager() #_at_place
w = wm.weather_at_place(f"{city},{region},{country}").weather
#.get_weather()
clouds = w.clouds
#  print(f"clouds: {clouds}")
dstatus = w.detailed_status
dewpoint = w.dewpoint
heatex = w.heat_index
humidex = w.humidex
humidity = w.humidity
pressure = w.pressure
#  print(f"pressure: {pressure}")
rain = w.rain
#  print(f"rain: {rain}")
snow = w.snow
#  print(f"snow :{snow}")
status = w.status
#  print(f"stats: {status}")
sunrise = w.sunrise_time
sunset = w.sunset_time
temperature = w.temperature('fahrenheit')
visibility = w.visibility_distance
wcode = w.weather_code
#  print(f"wcode: {wcode}")
icon_name = w.weather_icon_name
#  print(f"icon name: {icon_name}")
icon_url = w.weather_icon_url
#  print(f"icon url: {icon_url}")
wind = w.wind("miles_hour")
#  print(f"wind: {wind}")
icon = get_icon(icon_name)

parser = argparse.ArgumentParser(description='Process some integers.')
parser.add_argument('-i', action='store_true')
parser.add_argument('-t', action='store_true')
parser.add_argument('-v', action='store_true')
parser.add_argument('-l', action='store_true')
args = parser.parse_args()
if args.i:
    print(f"{icon} ")
elif args.v:
    print(w)
elif args.l:
    print(f"{loc}")
elif args.t:
    print(f"{temperature['temp']}° ({humidity}%) and {dstatus} in {city}")
else:
    print(f"|{wcode}|{icon_name}| {temperature['temp']}° ({humidity}%) and {dstatus}")




