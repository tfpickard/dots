#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Process
# ══════════════════════════════════════════════════════════════════════════════

# ..................................................................... Wait for

# Usage: pwait "<pattern>"
# Note:  includes special handling for "term WAIT <command>", see term

cycle=0.01  # loop window

# wait for uniquely named window to process to startup
until pgrep -avf "$@" | egrep -qv 'pwait|/term ' ;do sleep $cycle ;done
# wait for uniquely named window to close before proceeding
while pgrep -af "$@" | egrep -qv 'pwait|/term ' ;do sleep $cycle ;done

# vim: set ft=sh: #
