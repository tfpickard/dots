#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Package
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................... Distribution install

# be careful of partial gem list regex matches!
if gem list $1 | grep -q "^$1 " ;then
  installed_heading $1
else
  heading : $1
  time=$(chrono)
  ditto @ gem
  void && sudo gem install $1 || gem install $1
  post_install $1
  chrono $time
fi

# vim: set ft=sh: #
