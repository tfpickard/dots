#!/bin/bash
xterm=kitty
xterm=alacritty
misc="-vv"
class="--class myterm"
xflag=""
cmd="-e tmux"
lpath=/tmp/$xterm.log
touch $lpath
echo "****************************************" >> $lpath
echo "********* $(date)  ********************" >> $lpath
echo >> $lpath
$xterm $misc $class $xflag $cmd >$lpath 2>&1
